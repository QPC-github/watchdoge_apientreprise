{
  "size": 10000,
  "query": {
    "bool": {
      "must": [
        {
          "range": {
            "@timestamp": {
              "gte": "now-12h",
              "lte": "now/d"
            }
          }
        },
        {
          "match": {
            "parameters.context": {
              "query": "Ping"
            }
          }
        }
      ],
      "must_not": [
        {
          "terms": {
            "controller.keyword": [
              "api/v2/ping"
            ]
          }
        }
      ],
      "filter": {
        "exists": {
          "field": "controller"
        }
      }
    }
  },
  "sort": [
    {
      "@timestamp": {
        "order": "asc"
      }
    }
  ]
}
